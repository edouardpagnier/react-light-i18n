{
  "name": "react-light-i18n",
  "version": "1.0.1",
  "description": "A very light weight library to deal with string translations with automatic locale detection",
  "main": "./distribution/index.js",
  "scripts": {
    "build": "babel src --presets babel-preset-es2015 --out-dir distribution --plugins transform-class-properties",
    "prepublish": "yarn build",
    "test": "yarn build && jest"
  },
  "jest": {
    "testURL": "http://localhost",
    "testPathIgnorePatterns": ["/node_modules/", "/src/"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edouardpagnier/react-simple-i18n.git"
  },
  "keywords": [
    "react",
    "i18n"
  ],
  "author": "Edouard Pagnier",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/edouardpagnier/react-simple-i18n/issues"
  },
  "homepage": "https://github.com/edouardpagnier/react-simple-i18n#readme",
  "dependencies": {
    "browser-locale": "^1.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "jest": "^23.4.2"
  }
}
